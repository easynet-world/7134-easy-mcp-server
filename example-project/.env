# Example Project Environment Configuration
# This is a sample .env file for the example project
# Copy this to .env and modify values for your needs

# Server Configuration
EASY_MCP_SERVER_PORT=3000
EASY_MCP_SERVER_HOST=127.0.0.1

# MCP Server Configuration
EASY_MCP_SERVER_MCP_PORT=3001
EASY_MCP_SERVER_MCP_HOST=127.0.0.1

# Static Files
EASY_MCP_SERVER_STATIC_ENABLED=true
EASY_MCP_SERVER_STATIC_DIRECTORY=./public
EASY_MCP_SERVER_SERVE_INDEX=true
EASY_MCP_SERVER_DEFAULT_FILE=index.html

# API Configuration
EASY_MCP_SERVER_API_PATH=./api

# MCP Bridge Configuration (optional)
# EASY_MCP_SERVER_BRIDGE_CONFIG_PATH=./mcp-bridge.json

# Environment
NODE_ENV=development
