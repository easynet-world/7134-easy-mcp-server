# Easy MCP Server Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Main API server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# API path (optional - defaults to ./api)
API_PATH=./api

# Node.js environment
NODE_ENV=development

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP server configuration
MCP_HOST=0.0.0.0
MCP_PORT=3001

# Enable/disable MCP server (set to 'false' to disable)
MCP_ENABLED=true

# Custom MCP info page HTML file path
MCP_INFO_HTML_PATH=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS origin (default: *)
API_CORS_ORIGIN=*

# CORS methods (comma-separated)
API_CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# CORS credentials (true/false)
API_CORS_CREDENTIALS=false

# =============================================================================
# EXAMPLES
# =============================================================================

# Example: Custom MCP info page
# MCP_INFO_HTML_PATH=/path/to/your/custom-mcp-info.html

# Example: Production environment
# NODE_ENV=production
# SERVER_PORT=8080
# MCP_PORT=8081

# Example: Custom CORS settings
# API_CORS_ORIGIN=https://yourdomain.com
# API_CORS_CREDENTIALS=true
