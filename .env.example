# Easy MCP Server Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Main API server configuration
EASY_MCP_SERVER_HOST=0.0.0.0
EASY_MCP_SERVER_PORT=3000

# API path (optional - defaults to ./api)
EASY_MCP_SERVER_API_PATH=./api

# Node.js environment
NODE_ENV=development

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP server configuration
EASY_MCP_SERVER_MCP_HOST=0.0.0.0
EASY_MCP_SERVER_MCP_PORT=3001

# Enable/disable MCP server (set to 'false' to disable)
EASY_MCP_SERVER_MCP_ENABLED=true

# MCP base directory (default: ./mcp)
EASY_MCP_SERVER_MCP_BASE_PATH=./mcp

# =============================================================================
# STATIC FILE SERVING CONFIGURATION
# =============================================================================

# Enable/disable static file serving
EASY_MCP_SERVER_STATIC_ENABLED=true

# Static files directory (default: ./public)
EASY_MCP_SERVER_STATIC_DIRECTORY=./public

# Serve index.html at root route (default: true)
EASY_MCP_SERVER_SERVE_INDEX=true

# Default file name for root route (default: index.html)
EASY_MCP_SERVER_DEFAULT_FILE=index.html

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS origin (default: *)
EASY_MCP_SERVER_CORS_ORIGIN=*

# CORS methods (comma-separated)
EASY_MCP_SERVER_CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# CORS credentials (true/false)
EASY_MCP_SERVER_CORS_CREDENTIALS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
EASY_MCP_SERVER_LOG_LEVEL=info

# Log format (text, json, colored)
EASY_MCP_SERVER_LOG_FORMAT=colored

# Service name for logging
EASY_MCP_SERVER_SERVICE_NAME=easy-mcp-server

# =============================================================================
# HOT RELOADING CONFIGURATION
# =============================================================================

# Enable hot reloading (default: true)
EASY_MCP_SERVER_HOT_RELOAD_ENABLED=true

# Hot reload debounce delay in milliseconds
EASY_MCP_SERVER_HOT_RELOAD_DEBOUNCE_DELAY=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable API rate limiting
EASY_MCP_SERVER_API_RATE_LIMIT_ENABLED=false

# Rate limit window in milliseconds
EASY_MCP_SERVER_API_RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
EASY_MCP_SERVER_API_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
EASY_MCP_SERVER_DEBUG=false

# Enable verbose logging
EASY_MCP_SERVER_VERBOSE_LOGGING=false

# =============================================================================
# EXTERNAL API KEYS (OPTIONAL)
# =============================================================================

# OpenAI API key for LLM features
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# EXAMPLES
# =============================================================================

# Example: Production environment
# NODE_ENV=production
# EASY_MCP_SERVER_PORT=8080
# EASY_MCP_SERVER_MCP_PORT=8081

# Example: Custom CORS settings
# EASY_MCP_SERVER_CORS_ORIGIN=https://yourdomain.com
# EASY_MCP_SERVER_CORS_CREDENTIALS=true

# Example: Disable static file serving
# EASY_MCP_SERVER_STATIC_ENABLED=false

# Example: Custom static directory
# EASY_MCP_SERVER_STATIC_DIRECTORY=./static
