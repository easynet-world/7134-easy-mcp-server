{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "example-project/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "test/**/*",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
