{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false
  },
  "include": [
    "src/**/*",
    "example-project/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "test/**/*",
    "**/test/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/__tests__/**/*",
    "**/__test__/**/*"
  ]
}

