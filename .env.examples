# easy-mcp-server MCP bridge configuration
# All variables intentionally prefixed with EASY_MCP_SERVER_

# --- Core MCP servers (MCP org) ---
# GitHub
EASY_MCP_SERVER_GITHUB_TOKEN=
# Optional: Enterprise API URL, e.g. https://github.mycompany.com/api/v3
EASY_MCP_SERVER_GITHUB_API_URL=

# GitLab
EASY_MCP_SERVER_GITLAB_TOKEN=
# Optional: Self-hosted API URL, default https://gitlab.com/api/v4
EASY_MCP_SERVER_GITLAB_API_URL=

# Slack
EASY_MCP_SERVER_SLACK_BOT_TOKEN=
EASY_MCP_SERVER_SLACK_SIGNING_SECRET=

# Filesystem (comma-separated absolute paths)
EASY_MCP_SERVER_FILESYSTEM_ALLOWLIST=

# Postgres (read-only credentials recommended)
EASY_MCP_SERVER_POSTGRES_HOST=
EASY_MCP_SERVER_POSTGRES_PORT=5432
EASY_MCP_SERVER_POSTGRES_DB=
EASY_MCP_SERVER_POSTGRES_USER=
EASY_MCP_SERVER_POSTGRES_PASSWORD=
# Optional: require | disable | prefer
EASY_MCP_SERVER_POSTGRES_SSLMODE=

# Memory (optional tuning)
# Optional: path to persistent storage file
EASY_MCP_SERVER_MEMORY_STORAGE_FILE=

# Everything (utility/test server) â€“ typically no secrets required
# No variables required

# --- Major vendors (official) ---
# Playwright (optional tuning)
# true|false
EASY_MCP_SERVER_PLAYWRIGHT_HEADLESS=true
# chromium|firefox|webkit
EASY_MCP_SERVER_PLAYWRIGHT_BROWSER=chromium

# Microsoft Clarity
EASY_MCP_SERVER_CLARITY_PROJECT_ID=
EASY_MCP_SERVER_CLARITY_API_KEY=

# Salesforce
EASY_MCP_SERVER_SALESFORCE_CLIENT_ID=
EASY_MCP_SERVER_SALESFORCE_CLIENT_SECRET=
EASY_MCP_SERVER_SALESFORCE_USERNAME=
EASY_MCP_SERVER_SALESFORCE_PASSWORD=
EASY_MCP_SERVER_SALESFORCE_SECURITY_TOKEN=
# Optional: login URL (e.g., https://login.salesforce.com or sandbox URL)
EASY_MCP_SERVER_SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Notion
EASY_MCP_SERVER_NOTION_TOKEN=
# Optional: Notion API version, e.g. 2022-06-28
EASY_MCP_SERVER_NOTION_VERSION=

# Contentful
EASY_MCP_SERVER_CONTENTFUL_SPACE_ID=
EASY_MCP_SERVER_CONTENTFUL_ACCESS_TOKEN=
# Optional: environment id (default: master)
EASY_MCP_SERVER_CONTENTFUL_ENVIRONMENT=master
