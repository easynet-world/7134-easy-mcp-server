# Easy MCP Server Configuration
# =============================

# Server Configuration
EASY_MCP_SERVER_PORT=8887
EASY_MCP_SERVER_HOST=0.0.0.0
EASY_MCP_SERVER_MCP_PORT=8888
EASY_MCP_SERVER_MCP_HOST=0.0.0.0

# Paths
EASY_MCP_SERVER_MCP_BASE_PATH=./mcp
EASY_MCP_SERVER_API_PATH=./api

# CORS Configuration
EASY_MCP_SERVER_CORS_ORIGIN=*
EASY_MCP_SERVER_CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
EASY_MCP_SERVER_CORS_CREDENTIALS=false

# Static File Serving
EASY_MCP_SERVER_STATIC_ENABLED=true
EASY_MCP_SERVER_STATIC_DIRECTORY=./public
EASY_MCP_SERVER_SERVE_INDEX=true
EASY_MCP_SERVER_DEFAULT_FILE=index.html

# Logging
EASY_MCP_SERVER_LOG_LEVEL=info
EASY_MCP_SERVER_LOG_FORMAT=text
EASY_MCP_SERVER_SERVICE_NAME=easy-mcp-server

# MCP Bridge Configuration
# Leave empty to disable bridge functionality
# Set to a config file path (e.g., "mcp-bridge.json") to enable bridge functionality
# See mcp-bridge.json for example configuration
EASY_MCP_SERVER_BRIDGE_CONFIG_PATH=

# External API Keys (Optional)
OPENAI_API_KEY=your-key-here

# Environment
NODE_ENV=development

# =============================
# MCP Bridge Server Configurations
# =============================
# Uncomment and configure the MCP servers you want to use
# All environment variables use the pattern: EASY_MCP_SERVER.[SERVER_NAME].[PARAMETER_NAME]
# See mcp-bridge.json for example configuration

# GitHub MCP Server
# EASY_MCP_SERVER.github.token=your_github_token_here
# EASY_MCP_SERVER.github.api_url=https://api.github.com

# GitLab MCP Server  
# EASY_MCP_SERVER.gitlab.token=your_gitlab_token_here
# EASY_MCP_SERVER.gitlab.api_url=https://gitlab.com/api/v4

# Slack MCP Server
# EASY_MCP_SERVER.slack.bot_token=xoxb-your-bot-token
# EASY_MCP_SERVER.slack.signing_secret=your_signing_secret

# Filesystem MCP Server
# EASY_MCP_SERVER.filesystem.allowlist=/path/to/allowed/directory

# Postgres MCP Server
# EASY_MCP_SERVER.postgres.host=localhost
# EASY_MCP_SERVER.postgres.db=your_database
# EASY_MCP_SERVER.postgres.user=your_username
# EASY_MCP_SERVER.postgres.password=your_password
# EASY_MCP_SERVER.postgres.port=5432
# EASY_MCP_SERVER.postgres.sslmode=prefer

# Memory MCP Server
# EASY_MCP_SERVER.memory.storage_file=/path/to/memory.json

# Playwright MCP Server
# EASY_MCP_SERVER.playwright.headless=true
# EASY_MCP_SERVER.playwright.browser=chromium

# Microsoft Clarity MCP Server
# EASY_MCP_SERVER.clarity.project_id=your_project_id
# EASY_MCP_SERVER.clarity.api_key=your_api_key

# Salesforce MCP Server
# EASY_MCP_SERVER.salesforce.client_id=your_client_id
# EASY_MCP_SERVER.salesforce.client_secret=your_client_secret
# EASY_MCP_SERVER.salesforce.username=your_username
# EASY_MCP_SERVER.salesforce.password=your_password
# EASY_MCP_SERVER.salesforce.security_token=your_security_token
# EASY_MCP_SERVER.salesforce.login_url=https://login.salesforce.com

# Notion MCP Server
# EASY_MCP_SERVER.notion.token=your_notion_token
# EASY_MCP_SERVER.notion.version=2022-06-28

# Contentful MCP Server
# EASY_MCP_SERVER.contentful.space_id=your_space_id
# EASY_MCP_SERVER.contentful.access_token=your_access_token
# EASY_MCP_SERVER.contentful.environment=master

# Chrome DevTools MCP Server
# EASY_MCP_SERVER.chrome.debug_port=9222
# EASY_MCP_SERVER.chrome.user_data_dir=/path/to/chrome/profile
# EASY_MCP_SERVER.chrome.connect_url=ws://localhost:9222

# iTerm2 MCP Server
# EASY_MCP_SERVER.iterm2.session_id=your_session_id
# EASY_MCP_SERVER.iterm2.profile=your_profile_name
# EASY_MCP_SERVER.iterm2.working_dir=/path/to/working/directory
