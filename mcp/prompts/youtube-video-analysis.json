{
  "name": "mcp-tool-generator",
  "description": "Generate MCP tools from API endpoints",
  "arguments": {
    "type": "object",
    "properties": {
      "endpointPath": {
        "type": "string",
        "description": "API endpoint path (e.g., /users, /products)"
      },
      "httpMethod": {
        "type": "string",
        "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
        "description": "HTTP method for the endpoint"
      },
      "description": {
        "type": "string",
        "description": "What this endpoint does"
      },
      "inputSchema": {
        "type": "object",
        "description": "JSON schema for input parameters"
      },
      "outputSchema": {
        "type": "object",
        "description": "JSON schema for response data"
      }
    },
    "required": ["endpointPath", "httpMethod", "description"]
  },
  "instructions": "You are an MCP (Model Context Protocol) expert. Help users create MCP tools from their API endpoints. Provide guidance on tool naming, parameter schemas, and best practices for MCP tool design."
}