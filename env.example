# ========================================
# easy-mcp-server Configuration
# AI时代的 Express Server 配置模板
# ========================================

# Server Ports
EASY_MCP_SERVER_PORT=8887              # REST API 端口
EASY_MCP_SERVER_MCP_PORT=8888          # MCP Server 端口
EASY_MCP_SERVER_HOST=0.0.0.0           # 服务器地址

# Hot Reload Configuration
EASY_MCP_SERVER_HOT_RELOAD=true        # 启用热重载
EASY_MCP_SERVER_API_PATH=./api         # API 文件目录
EASY_MCP_SERVER_MCP_BASE_PATH=./mcp    # MCP 资源目录

# AI Integration - OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx     # OpenAI API Key
OPENAI_BASE_URL=https://api.openai.com # 可选：自定义 API 地址

# AI Integration - Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx  # Claude API Key

# AI Integration - Google (Gemini)
GOOGLE_API_KEY=AIzaxxxxxxxxxxxxxxxx    # Gemini API Key

# MCP Bridge Configuration
EASY_MCP_SERVER_BRIDGE_ENABLED=true
EASY_MCP_SERVER_BRIDGE_CONFIG_PATH=mcp-bridge.json

# MCP Bridge - GitHub
EASY_MCP_SERVER.github.token=ghp_xxxxx
EASY_MCP_SERVER.github.api_url=https://api.github.com

# MCP Bridge - PostgreSQL
EASY_MCP_SERVER.postgres.host=localhost
EASY_MCP_SERVER.postgres.db=myapp
EASY_MCP_SERVER.postgres.user=postgres
EASY_MCP_SERVER.postgres.password=secret
EASY_MCP_SERVER.postgres.port=5432

# Logging
NODE_ENV=development                   # development / production
LOG_LEVEL=info                         # debug / info / warn / error

# Security
RATE_LIMIT_MAX=100                     # 每分钟最大请求数
CORS_ORIGIN=*                          # CORS 允许的源
